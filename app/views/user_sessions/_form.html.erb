<%= simple_form_for(@user_session) do |f| %>
  <%= f.error_notification unless f.object.errors[:base].present? %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :email %>
  <%= f.input :password %>

  <%= f.button :submit, "Login", class: "btn-primary" %>
  <%= link_to "Cancel", :back, class: "btn btn-outline-secondary" %>

<% end %>
